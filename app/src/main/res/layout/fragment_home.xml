<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="2"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dp">

            <Spinner
                android:id="@+id/spinnerTeamID"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:padding="5dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textViewTaskBoard"
                android:enabled="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:padding="5dp"
                android:gravity="center"
                android:inputType="text"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="TASK BOARD"
                tools:ignore="HardcodedText,TextViewEdits" />

            <TextView
                android:id="@+id/textViewUsername"
                android:enabled="false"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:padding="5dp"
                android:gravity="center"
                android:inputType="textPersonName"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="USERNAME"
                tools:ignore="HardcodedText,TextViewEdits" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dp">

            <Spinner
                android:id="@+id/spinnerTask"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="15dp"
                android:gravity="center" />

            <Spinner
                android:id="@+id/spinnerStatus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="15dp"
                android:gravity="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textViewSort"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Sort by:"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:enabled="false"
                android:gravity="center"
                android:layout_weight="1"
                tools:ignore="HardcodedText" />

            <Spinner
                android:id="@+id/spinnerSort"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:padding="2dp"
                android:layout_gravity="center"
                android:gravity="center" />

            <Button
                android:id="@+id/buttonAddTask"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Add Task"
                android:layout_weight="4"
                android:padding="2dp"
                android:gravity="center"
                tools:ignore="HardcodedText" />
        </TableRow>
    </TableLayout>

    <fragment
        android:id="@+id/fragmentTaskBody"
        android:name="com.example.taskmanager_2.FragmentTaskBody"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        tools:ignore="FragmentTagUsage,MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>